<!DOCTYPE html>
<html lang="en">
  <head>
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">

    <!-- Swiper CSS -->
       {{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
    
    <!-- Swiper CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

    <!-- CSS principal del tema -->
    {{ 'application.css' | asset_url | stylesheet_tag }}
        <!-- CSS principal del tema -->
   {{ 'swiper-custom.css' | asset_url | stylesheet_tag }}

    <!-- Hooks de contenido para el header (inclusión automática de plugins) -->
    {{ content_for_header }}

    <!-- Alpine.js -->
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
  </head>
  <body>
    <!-- Sección del header -->
    {% section 'header' %}

    <!-- Contenido principal -->
    <main role="main">
      {{ content_for_layout }}
    </main>

    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

    <!-- Inicialización de Swiper -->
    <script>
      document.addEventListener('DOMContentLoaded', function () {
  var swiper = new Swiper(".mySwiper", {
    slidesPerView: 1.2, // Muestra 1 slide completo y parte de otro
    spaceBetween: 20,   // Espacio entre los slides (ajusta según sea necesario)
    breakpoints: {
      640: {
        slidesPerView: 1.5, // Ajusta para pantallas más grandes
        spaceBetween: 20,   // Espacio entre los slides
      },
      768: {
        slidesPerView: 2.5, // Muestra más slides en pantallas medianas
        spaceBetween: 20,
      },
      1024: {
        slidesPerView: 6,   // Muestra 3 slides completos en pantallas grandes
        spaceBetween: 20,
      },
    },
    scrollbar: {
      el: ".swiper-scrollbar",
      hide: true,
    },
  });
});
    </script>

    <!-- Scripts principales del tema -->
    {{ 'application.js' | asset_url | script_tag }}

  </body>
</html>
