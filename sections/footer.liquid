<footer class="text-white bg-[#f7f8fa] pt-10">
  <div class="mx-[0.2em] lg:mx-20">
    <div class="swiper mySwiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide bg-white rounded-lg shadow-md p-6 flex flex-col items-center justify-center text-center">
            <h3 class="text-xl font-bold mb-2 text-gray-800">{{ block.settings.title }}</h3>
            <p class="text-gray-600">{{ block.settings.text }}</p>
          </div>
        {% endfor %}
      </div>
      <div class="swiper-pagination"></div>
    </div>
  </div>

  <div class="bg-[#0E2129] relative pt-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col items-center lg:flex-row lg:justify-center lg:items-start lg:space-x-20 mt-20">
      <div class="text-center mb-8 lg:mb-0 lg:text-left">
        <h3 class="text-lg font-semibold text-white mb-4">{{ section.settings.company_name | escape }}</h3>
        <p class="text-gray-400">{{ section.settings.company_address | escape }}</p>
      </div>
      
      <div class="text-center lg:text-left">
        <h3 class="text-lg font-semibold text-white mb-4">{{ section.settings.useful_links_title | escape }}</h3>
        <ul class="space-y-2 text-gray-400">
          {% for link in linklists[section.settings.footer_menu].links %}
            <li><a href="{{ link.url }}" class="hover:text-white">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>
    </div>

    <div class="flex items-center justify-center mt-8">
      <div class="flex-grow border-t border-gray-700 max-w-xs"></div>
      <div class="flex space-x-4 px-4">
        {% if section.settings.facebook_link != blank %}
          <a href="{{ section.settings.facebook_link }}" class="text-gray-400 hover:text-white">
            {% render 'icon-fb' %}
          </a>
        {% endif %}
        {% if section.settings.instagram_link != blank %}
          <a href="{{ section.settings.instagram_link }}" class="text-gray-400 hover:text-white">
            {% render 'icon-ig' %}
          </a>
        {% endif %}
        {% if section.settings.tiktok_link != blank %}
          <a href="{{ section.settings.tiktok_link }}" class="text-gray-400 hover:text-white">
            {% render 'icon-tiktok' %}
          </a>
        {% endif %}
      </div>
      <div class="flex-grow border-t border-gray-700 max-w-xs"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col items-center md:flex-row md:justify-between py-6 mt-8">
      <p class="text-gray-400 text-center mb-4 md:mb-0 md:text-left">© 2024, H2 Helectronics - Desarrollado por Aura Digital</p>
      <div class="flex justify-center md:justify-end bg-white rounded-[10px] px-[10px]">
        <img src="{{ section.settings.payment_methods_image | img_url: '200x' }}" alt="Métodos de pago aceptados" class="h-8 w-auto">
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "company_name",
      "label": "Company Name",
      "default": "H2 Electronics"
    },
    {
      "type": "text",
      "id": "company_address",
      "label": "Company Address",
      "default": "Costa Rica"
    },
    {
      "type": "text",
      "id": "useful_links_title",
      "label": "Useful Links Title",
      "default": "Useful links"
    },
    {
      "type": "link_list",
      "id": "footer_menu",
      "label": "Footer Menu",
      "default": "footer"
    },
    {
      "type": "url",
      "id": "facebook_link",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "instagram_link",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "tiktok_link",
      "label": "TikTok URL"
    },
    {
      "type": "image_picker",
      "id": "payment_methods_image",
      "label": "Payment Methods Image"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "limit": 4,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Feature Title",
          "default": "Feature Title"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Feature Text",
          "default": "Feature description goes here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "blocks": [
        {
          "type": "feature"
        },
        {
          "type": "feature"
        },
        {
          "type": "feature"
        },
        {
          "type": "feature"
        }
      ]
    }
  ]
}
{% endschema %}