<header class="mb-4">
  <!-- HEADER GLOBAL -->

  <!-- Start Before Header -->
  <div class="bg-[#0E2129] p-4 flex justify-center">
    <a href="#" class="text-white mx-2">
      {% render 'icon-fb' %}
    </a>
    <a href="#" class="text-white mx-2">
      {% render 'icon-ig' %}
    </a>
    <a href="#" class="text-white mx-2">
      {% render 'icon-tiktok' %}
    </a>
  </div>
  <!-- End Before Header -->

  <!-- Header mobile -->
  <div x-data="{ open: false }" 
       x-init="$watch('open', value => document.body.classList.toggle('overflow-hidden', value))" 
       class="px-[15px] py-[20px] relative">
    <section class="flex justify-between flex-row items-center mb-[1rem]">
      <div>
        <img src="{{'logo-elec.png' | asset_url}}" width="90" alt="Logo">
      </div>

      <div class="flex flex-row gap-3">
        <!-- Ícono de Login -->
        <div class="relative flex items-center justify-center w-12 h-12">
          <a href="{{ routes.account_login_url }}" class="text-base text-gray-500 hover:text-gray-900 bg-[#1D495B] w-10 h-10 flex items-center justify-center rounded-full">
            {% render 'icon-login' %}
          </a>
          <div class="absolute inset-0 border-2 border-gray-300 rounded-full"></div>
        </div>

        <!-- Ícono de Carrito -->
        <div class="relative flex items-center justify-center w-12 h-12">
          <a href="{{ routes.cart_url }}" class="text-base text-gray-500 hover:text-gray-900 bg-[#1D495B] w-10 h-10 flex items-center justify-center rounded-full">
            {% render 'icon-shopping-bag' %}
          </a>
          <div class="absolute inset-0 border-2 border-gray-300 rounded-full"></div>
          <!-- Círculo Verde con Número -->
          <div class="absolute top-[-5px] right-0 bg-[#52A1BF] text-white text-xs font-bold rounded-full w-5 h-5 flex items-center justify-center">
            3
          </div>
        </div>

        <!-- Botón de Menú -->
        <div>
          <button @click="open = !open" class="p-2 rounded-full border-2 border-solid border-[#e1e1e1]">
            {% render 'icon-menu' %}
          </button>
        </div>
      </div>
    </section>

    <!-- Barra de búsqueda -->
    <section class="flex items-center justify-center bg-white rounded-full shadow-sm w-full border-2 border-solid border-[#e1e1e1]">
      <input type="text" placeholder="Buscar Productos" class="flex-grow p-3 text-gray-700 bg-transparent focus:outline-none rounded-full ">
      <button class="p-3 text-gray-500">
        {% render 'icon-search' %}
      </button>
    </section>

    <!-- Menú desplegable como Modal -->
    <div 
      x-show="open" 
      @click.away="open = false" 
      x-transition:enter="transition ease-out duration-300"
      x-transition:enter-start="opacity-0 transform scale-90"
      x-transition:enter-end="opacity-100 transform scale-100"
      x-transition:leave="transition ease-in duration-300"
      x-transition:leave-start="opacity-100 transform scale-100"
      x-transition:leave-end="opacity-0 transform scale-90"
      class="fixed inset-0 bg-white z-50 shadow-lg overflow-hidden flex flex-col"
    >
      <div class="flex justify-between items-center p-5">
        <img src="{{'logo-elec.png' | asset_url}}" width="90" alt="Logo">
        <button @click="open = false" class="text-gray-500 hover:text-gray-900">
          {% render 'icon-close' %}
        </button>
      </div>

      <!-- Sección del menú que tendrá scroll -->
      <nav class="overflow-y-auto h-full p-5">
        <ul class="space-y-4">
          <li><a href="#" class="text-gray-700 hover:text-gray-900">Components</a></li>
          <li><a href="#" class="text-gray-700 hover:text-gray-900">Tools</a></li>
          <li><a href="#" class="text-gray-700 hover:text-gray-900">Deals</a></li>
          <li><a href="#" class="text-gray-700 hover:text-gray-900">Workshops</a></li>
          <li><a href="#" class="text-gray-700 hover:text-gray-900">B2B</a></li>
          <li><a href="#" class="text-gray-700 hover:text-gray-900">Boards</a></li>
          <li><a href="#" class="text-gray-700 hover:text-gray-900">Components</a></li>
          <li><a href="#" class="text-gray-700 hover:text-gray-900">Tools</a></li>
          <li><a href="#" class="text-gray-700 hover:text-gray-900">3D Printers</a></li>
          <li><a href="#" class="text-gray-700 hover:text-gray-900">B2B</a></li>
          <li><a href="#" class="text-gray-700 hover:text-gray-900">Boards</a></li>
          <li><a href="#" class="text-gray-700 hover:text-gray-900">Components</a></li>
          <li><a href="#" class="text-gray-700 hover:text-gray-900">Tools</a></li>
          <li><a href="#" class="text-gray-700 hover:text-gray-900">3D Printers</a></li>
          <li><a href="#" class="text-gray-700 hover:text-gray-900">B2B</a></li>
          <li><a href="#" class="text-gray-700 hover:text-gray-900">Boards</a></li>
          <li><a href="#" class="text-gray-700 hover:text-gray-900">Components</a></li>
          <li><a href="#" class="text-gray-700 hover:text-gray-900">Tools</a></li>
          <li><a href="#" class="text-gray-700 hover:text-gray-900">3D Printers</a></li>
          <li><a href="#" class="text-gray-700 hover:text-gray-900">B2B</a></li>
          <li><a href="#" class="text-gray-700 hover:text-gray-900">Boards</a></li>
          <li><a href="#" class="text-gray-700 hover:text-gray-900">Components</a></li>
          <li><a href="#" class="text-gray-700 hover:text-gray-900">Tools</a></li>
          <li><a href="#" class="text-gray-700 hover:text-gray-900">3D Printers</a></li>
          <!-- Agrega más elementos aquí si es necesario -->
        </ul>
      </nav>
    </div>
  </div>
</header>






