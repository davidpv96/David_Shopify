<div class="max-w-7xl mx-auto p-6">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-2xl font-semibold">Your cart</h2>
    <a href="/" class="text-green-600 hover:text-green-700 underline">Continue shopping</a>
  </div>
  
  <!-- Formulario del carrito -->
  <form action="/cart" method="post" class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Tabla de productos del carrito -->
    <div class="lg:col-span-2 overflow-x-auto">
      <table class="min-w-full bg-white">
        <thead>
          <tr>
            <th class="py-2 text-left">Product</th>
            <th class="py-2 text-center">Quantity</th>
            <th class="py-2 text-center">Price</th>
            <th class="py-2 text-center">Remove</th>
          </tr>
        </thead>
        <tbody>
          <!-- Iterar sobre los items del carrito -->
          {% for item in cart.items %}
          <tr class="border-t">
            <!-- Columna del producto -->
            <td class="py-4">
              <div class="flex items-center space-x-4">
                <img src="{{ item.image | img_url: 'medium' }}" alt="{{ item.title }}" class="w-24 h-24 object-cover">
                <div>
                  <h3 class="text-lg font-semibold">{{ item.product.title }}</h3>
                  <p class="text-sm text-gray-500">{{ item.variant.title }}</p>
                  <p class="text-xs text-gray-400">Model: {{ item.sku }}</p>
                </div>
              </div>
            </td>
            <!-- Columna de la cantidad -->
            <td class="py-4 text-center">
              <div class="flex items-center justify-center space-x-2">
                <button type="button" class="px-2 py-1 border rounded">-</button>
                <input type="number" name="updates[{{ item.key }}]" value="{{ item.quantity }}" min="1" class="w-12 text-center border border-gray-300 rounded outline-none">
                <button type="button" class="px-2 py-1 border rounded">+</button>
              </div>
            </td>
            <!-- Columna del precio -->
            <td class="py-4 text-center font-semibold">
              {{ item.line_price | money }}
            </td>
            <!-- Columna para eliminar el producto -->
            <td class="py-4 text-center">
              <button type="submit" name="updates[{{ item.key }}]" value="0" class="text-gray-500 hover:text-red-700">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
              </button>
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>

    <!-- Resumen del pedido y Ã¡rea de instrucciones -->
    <div class="lg:col-span-1 space-y-6">
      <div class="p-6 border rounded-lg bg-gray-50">
        <div class="flex justify-between mb-4">
          <p>Subtotal</p>
          <p class="font-semibold">{{ cart.total_price | money }}</p>
        </div>
        <p class="text-sm text-gray-500 mb-4">Tax included and shipping calculated at checkout</p>
        {% if cart.total_price >= 10000 %}
          <p class="text-sm text-green-500 mb-4">You are eligible for free shipping!</p>
        {% endif %}
        <label class="flex items-center mb-4">
          <input type="checkbox" class="form-checkbox h-4 w-4 text-green-500" required>
          <span class="ml-2 text-sm">I have read and agree to the <a href="/policies/privacy-policy" class="text-green-500 underline">Privacy Policy</a>.</span>
        </label>
        <button type="submit" class="w-full bg-green-600 text-white py-2 rounded-md hover:bg-green-700">Check out</button>
      </div>
      <div class="p-6 border rounded-lg bg-gray-50">
        <textarea name="note" class="w-full p-2 border rounded-md" placeholder="Order special instructions"></textarea>
      </div>
    </div>
  </form>
</div>
