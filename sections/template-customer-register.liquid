<div class="h-full flex items-center justify-center py-12 px-6 md:px-4 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <h1 class="text-center text-3xl font-bold mt-6">Crear una cuenta</h1>
        </div>
        <div class="mt-8">
            {% form 'create_customer' %}
                {% if form.errors %}
                    <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3 mb-4" role="alert">
                        <strong class="font-bold">¡Error!</strong>
                        <p class="block sm:inline">{{ form.errors | default_errors }}</p>
                    </div>
                {% endif %}

                <div class="space-y-4">
                    <div>
                        <label for="first_name" class="block text-sm font-medium text-gray-700">Nombre</label>
                        <input type="text"
                            name="customer[first_name]"
                            id="first_name"
                            autocomplete="given-name"
                            class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-[#0e2129] focus:border-[#0e2129]"
                            placeholder="Ingrese su nombre"
                        >
                    </div>

                    <div>
                        <label for="last_name" class="block text-sm font-medium text-gray-700">Apellido</label>
                        <input type="text"
                            name="customer[last_name]"
                            id="last_name"
                            autocomplete="family-name"
                            class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-[#0e2129] focus:border-[#0e2129]"
                            placeholder="Ingrese su apellido"
                        >
                    </div>

                    <div>
                        <label for="birthday" class="block text-sm font-medium text-gray-700">Fecha de nacimiento</label>
                        <input type="date"
                            name="customer[note][Birthday]"
                            id="birthday"
                            class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-[#0e2129] focus:border-[#0e2129]"
                        >
                    </div>

                    <div>
                        <label for="email_address" class="block text-sm font-medium text-gray-700">Correo electrónico</label>
                        <input type="email"
                            name="customer[email]"
                            id="email_address"
                            autocomplete="email"
                            class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-[#0e2129] focus:border-[#0e2129]"
                            placeholder="ejemplo@correo.com"
                        >
                    </div>

                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700">Contraseña</label>
                        <input type="password"
                            name="customer[password]"
                            id="password"
                            autocomplete="new-password"
                            class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-[#0e2129] focus:border-[#0e2129]"
                            placeholder="Ingrese su contraseña"
                        >
                    </div>
                </div>

                <div class="mt-6">
                    <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-[#0e2129] hover:bg-opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#0e2129]">
                        Crear cuenta
                    </button>
                </div>
            {% endform %}
        </div>
    </div>
</div>