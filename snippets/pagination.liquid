{% if pagination.pages > 1 %}
    <nav role="navigation" class="flex justify-center items-center my-8">
        {% if pagination.previous %}
            <a href="{{ pagination.previous.url }}" class="text-gray-600 hover:text-gray-800 px-2 py-1 mx-1 rounded-full font-medium">
                &larr;
            </a>
        {% endif %}

        {% for part in pagination.parts %}
            {% if part.is_link %}
                <a href="{{ part.url }}"
                   class="px-3 py-2 mx-1 rounded-full font-medium
                   {% if pagination.current_page == part.title %}
                     bg-yellow-500 text-white
                   {% else %}
                     text-gray-600 hover:text-gray-800
                   {% endif %}">
                   {{ part.title }}
                </a>
            {% else %}
                <span class="px-3 py-2 mx-1 rounded-full font-medium text-gray-600">
                   {{ part.title }}
                </span>
            {% endif %}
        {% endfor %}

        {% if pagination.next %}
            <a href="{{ pagination.next.url }}" class="text-gray-600 hover:text-gray-800 px-2 py-1 mx-1 rounded-full font-medium">
                &rarr;
            </a>
        {% endif %}
    </nav>
{% endif %}
