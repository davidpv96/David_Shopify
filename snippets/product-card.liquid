{% comment %} <div class="bg-white p-4 border border-gray-300 rounded-lg flex flex-col relative">
  {% if product.compare_at_price > product.price %}
    <span class="absolute top-2 right-2 bg-yellow-500 text-white text-xs font-bold px-2 py-1 rounded">Sale</span>
  {% endif %}
  
  <a href="{{ product.url }}">
    <img src="{{ product | img_url: '400x400' }}" alt="{{ product.title }}" class="w-full h-auto mb-4">
  </a>
  <div class="text-left">
    <div class="text-sm text-gray-700">{{ product.vendor }}</div>
    {% if product.available %}
      <div class="text-[#52A1BF] font-semibold">In stock</div>
    {% else %}
      <div class="text-red-500 font-semibold">Out of stock</div>
    {% endif %}
    <h3 class="text-lg font-bold text-gray-800 mt-2">{{ product.title }}</h3>
    <p class="text-sm text-gray-600 mt-2">{{ product.description | truncate: 100 }}</p>
    <div class="flex items-center mt-4">
      {% if product.compare_at_price > product.price %}
        <span class="text-lg font-bold text-gray-900">{{ product.price | money }}</span>
        <span class="text-sm text-gray-600 line-through ml-2">{{ product.compare_at_price | money }}</span>
      {% else %}
        <span class="text-lg font-bold text-gray-900">{{ product.price | money }}</span>
      {% endif %}
    </div>
  </div>

  {% if product.available %}
    {% if product.has_only_default_variant %}
      <form action="/cart/add" method="post" class="mt-4">
        <input type="hidden" name="id" value="{{ product.variants.first.id }}">
        <button type="submit" class="bg-[#1D495B] text-white py-2 px-4 rounded-full w-full">Add to cart</button>
      </form>
    {% else %}
      <a href="{{ product.url }}" class="bg-[#1D495B] text-white py-2 px-4 rounded-full mt-4 w-full text-center">Select options</a>
    {% endif %}
  {% else %}
    <button class="bg-gray-400 text-white py-2 px-4 rounded-full mt-4 w-full cursor-not-allowed" disabled>Out of stock</button>
  {% endif %}
</div> {% endcomment %}
